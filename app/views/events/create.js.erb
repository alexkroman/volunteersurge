<% if @event %>
  <% if @event.save %>
    $('#calendar').fullCalendar( 'refetchEvents');
    $('#create_event_dialog').dialog('destroy');
  <% else %>
    alert(@event.errors.full_messages(',').join("\n"));
  <% end %>
<% end %>

