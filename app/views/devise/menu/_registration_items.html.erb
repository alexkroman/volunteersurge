<div id="Tabs">
  <% if can? :create, Event %> 
    <%= tabs_tag :open_tabs => {:id => 'MainTabs'} do |tab| %>
        <%= tab.dashboard 'Dashboard', dashboard_index_path %>
        <%= tab.shifts 'All Shifts', shifts_path %>
        <%= tab.volunteers 'All Volunteers', users_path %>
        <%= tab.signups 'All Signups', signups_path %>
        <%= tab.events 'Calendar', events_path %>
    <% end %>
  <% else %>
    <%= tabs_tag :open_tabs => {:id => 'MainTabs'} do |tab| %>
        <%= tab.sign_up 'Sign Up', new_user_registration_path %>
        <%= tab.login 'Login', new_user_session_path %>
    <% end %>
  <% end %>
</div>